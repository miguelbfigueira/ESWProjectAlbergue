@page
@model AllUsersModel
@{
    ViewData["Title"] = "Utilizadores";
}

<h4>@ViewData["Title"]</h4>
<p>
    @Html.ActionLink("Funcionários", "AllFuncionarios", "Identity/Account/Manage", null, null)
   
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Input.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Input.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Input.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Input.Address)
            </th>
            <!--
            <th>
                @Html.DisplayNameFor(model => model.Input.PostalCode)
            </th>
                -->
            <th>
                @Html.DisplayNameFor(model => model.Input.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       
        @foreach (var item in Model.users)
        {
            @if (item.Role == "users")
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <!--
        <td>
            @Html.DisplayFor(modelItem => item.Postalcode)
        </td>
    -->
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>

                <form asp-action="Edit" asp-route-id="@item.Id">
                    <input type="hidden" asp-for="@item.Id" />
                    <input type="submit" value="Promover" class="btn btn-default" /> |
                </form>
                <form asp-action="Delete" asp-route-id="@item.Id">
                    <input type="hidden" asp-for="@item.Id" />
                    <input type="submit" value="Remover" class="btn btn-default" /> |
                </form>
            </td>
            
        </tr>
                }
            }
    </tbody>
</table>