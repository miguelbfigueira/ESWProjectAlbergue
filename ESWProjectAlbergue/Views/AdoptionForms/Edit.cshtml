            </div>
            <div class="form-group">
                <label asp-for="Cc" class="control-label"></label>
                <input asp-for="Cc" class="form-control" />
                <span asp-validation-for="Cc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job" class="control-label"></label>
                <input asp-for="Job" class="form-control" />
                <span asp-validation-for="Job" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="MoreAnimals" /> @Html.DisplayNameFor(model => model.MoreAnimals)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="HowMany" class="control-label"></label>
                <input asp-for="HowMany" class="form-control" />
