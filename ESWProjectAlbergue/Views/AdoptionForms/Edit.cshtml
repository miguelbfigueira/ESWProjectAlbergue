                <span asp-validation-for="AnimalTypes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="FinanciallyStable" /> @Html.DisplayNameFor(model => model.FinanciallyStable)
