@model ESWProjectAlbergue.Models.Visit

@{
    ViewData["Title"] = "Create";
}


<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>

<style>
    .container-all {
        background-color: #333333;
        padding: 20px;
        padding-top: 6px;
        border-style: solid;
        border-width: 5px;
        align-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        margin-top: 5px;
        margin-right: auto;
        margin-left: auto;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        display: inline-block;
        background-color: #333333;
        border-radius: 25px;
        position: center;
    }

    .whitetext {
        color: white;
        font-family: 'Quicksand', sans-serif;
        font-size: 16px;
    }

    .criar {
        font-family: "Pacifico";
        font-size: 40px;
        width: 100%;
        text-align: center;
        margin-top: 3%;
        color: #FFFFFF;
    }

    .form-create {
    }

    .creates {
        margin: 0 auto;
        width: fit-content;
    }
</style>

<div class="container-all">
    <h2 class="criar">Agendar Visita</h2>

    <br>

    <div class="form-create">


        <div class="creates">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label whitetext"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserToVisitId" class="control-label whitetext"></label>
                    <select asp-for="UserToVisitId" class="form-control" asp-items="ViewBag.UserToVisitId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label whitetext"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-default" />
                    <a asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>



</div>

@Html.Raw(TempData["Success"])
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    function Confirmmessage() {
        var alert = confirm("Tem a certeza que quer agendar a visita?");
        if (alert) {
            return true;
        } else {
            return false;
        }
    }
</script>