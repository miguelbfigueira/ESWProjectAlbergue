@model IEnumerable<ESWProjectAlbergue.Models.Visit>

@{
    ViewData["Title"] = "Index";
}



<style>

    .title {
        font-family: "Pacifico";
        font-size: 40px;
        width: 100%;
        text-align: center;
        color: #FFFFFF;
    }

    .color {
        background-color: #9296ff;
    }

</style>


<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/perfect-scrollbar/perfect-scrollbar.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/csstable.css">
    <!--===============================================================================================-->
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">

</head>
<body>
    <div class="lembretestotal">

        <img src='~/images/park.png' width="60" height="60" style="display: block; margin-left: auto; margin-right: auto;" >

        <h2 class="title">Visitas</h2>
        <br>
        <p class="text-center">
            <a asp-action="Create" class="btnnovolembrete" style="background-color:#9296ff;">Agendar nova visita</a>
        </p>

        <div class="limiter">
            <div class="container-table100">
                <div class="wrap-table100">
                    <div class="table">

                        <div class="row header" style="background-color:#9296ff;">
                            <div class="cell">
                                <span style="text-align:center"> @Html.DisplayNameFor(model => model.Description) </span>
</div>
                            <div class="cell">
                                @Html.DisplayNameFor(model => model.UserToVisit)
                            </div>
                            <div class="cell">
                                @Html.DisplayNameFor(model => model.Date)
                            </div>

                            <div class="cell">
                                Acções
                            </div>
                        </div>
                        @foreach (var item in Model)
                        {
                        <div class="row">
                            <div class="cell" data-title="Full Name">
                                @Html.DisplayFor(modelItem => item.Description)
                            </div>
                            <div class="cell" data-title="Age">
                                @Html.DisplayFor(modelItem => item.UserToVisit.Name)
                            </div>
                            <div class="cell" data-title="Job Title">
                                @Html.DisplayFor(modelItem => item.Date)
                            </div>


                            <div class="cell" data-title="Location">
                                <a asp-action="Edit" asp-route-id="@item.VisitId">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.VisitId">Visualizar</a>
                                <a asp-action="Delete" asp-route-id="@item.VisitId">Remover</a>

                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>





    <!--===============================================================================================-->
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/bootstrap/js/popper.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="js/main.js"></script>

</body>
</html>

