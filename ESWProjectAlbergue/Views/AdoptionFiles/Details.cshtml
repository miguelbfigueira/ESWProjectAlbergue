@model ESWProjectAlbergue.Models.AdoptionFile

@{
    ViewData["Title"] = "Details";
}
<style>
    .container-all {
        background-color: #333333;
        padding: 20px;
        padding-top: 6px;
        border-style: solid;
        border-width: 5px;
        align-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        margin-top: 5px;
        margin-right: auto;
        margin-left: auto;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        display: inline-block;
        background-color: #333333;
        border-radius: 25px;
        position: center;
    }

    .whitetext {
        color: white;
        font-family: 'Quicksand', sans-serif;
        font-size: 16px;
    }

    .editar {
        font-family: "Pacifico";
        font-size: 40px;
        width: 100%;
        text-align: center;
        margin-top: 3%;
        color: #FFFFFF;
    }

    .form-create {
    }

    .creates {
        margin: 0 auto;
        width: fit-content;
    }

    .btnsalvar {
        background-color: #02A69E;
        text-transform: uppercase;
        border: none;
        color: white;
        padding: 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 10px;
    }

        .btnsalvar:hover {
            background-color: gray;
            color: white;
        }

    .btnatualizar {
        margin: 0 auto;
        align-content: center;
        display: table;
    }
</style>

<div class="container-all">

    <<div class="form-create">

         <div class="creates">
             <h2 class="editar">Detalhes Ficha Adoção</h2>
             <br />



             <p class="whitetext">
                 <span class="bold whitetext">
                     @Html.DisplayNameFor(model => model.Animal)
                 </span>


                 @Html.DisplayFor(model => model.Animal.Name)
                 </p>

             <p class=" whitetext">
                 <span class="bold whitetext">
                 Adotante
                 </span>

                 @Html.DisplayFor(model => model.ApplicationUser.Name)
             </p>

         </div>
        <div class="btnatualizar">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btnsalvar">Editar</a> |
            <a asp-action="Index" class="btnsalvar">Voltar</a>
        </div>
    </div>
</div>>