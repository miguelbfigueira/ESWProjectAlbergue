@model IEnumerable<ESWProjectAlbergue.Models.MainAnimal>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


@if (User.IsInRole("admins") || User.IsInRole("funcionarios"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnimalType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GenderType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnimalAgeType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnimalBreed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnimalSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnimalFurType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnimalBehaviorType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adopted)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

            <tr>
                @if (!item.Adopted)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnimalType.Designacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GenderType.Designacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnimalAgeType.Designacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnimalBreed.Designacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnimalSize.Designacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnimalFurType.Designacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnimalBehaviorType.Designacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adopted)

                    </td>
                    @if (User.IsInRole("admins") || User.IsInRole("funcionarios"))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MainAnimalId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.MainAnimalId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.MainAnimalId">Delete</a>
                        </td>
                    }
                }



            </tr>
            }
        </tbody>
    </table>
