<!DOCTYPE html>
<html>

<head>
    <title>W3.CSS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="text/html; charset=iso-8859-2" http-equiv="Content-Type">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <style>
        .mySlides {
            display: none;
        }

        .pacifico {
            font-family: "Pacifico";
            font-size:40px;
            color:darkbrown;
        }

        .slidedesc {
            border-radius: 40px;
            background-color: rgba(255, 255, 255, 0.2);
            border-color: white;
            border: solid;
        }

        .big{
            width:inherit;
        }
    </style>
</head>

<body>


    <div class="w3-content w3-section container" >
        <div class="w3-display-middle w3-large w3-container w3-padding-16 slidedesc">
            <p class="pacifico">Encontre uma nova companhia </p>

        </div>
        <img class="mySlides w3-animate-fading" src="~/images/slide1.jpg" style="width:100%">

        <div class="w3-display-middle w3-large w3-container w3-padding-16 slidedesc">
            <p class="pacifico">Encontre uma nova companhia </p>

        </div>
        <img class="mySlides w3-animate-fading" src="~/images/slide2.jpg" style="width:100%">

        <div class="w3-display-middle w3-large w3-container w3-padding-16 slidedesc">
            <p class="pacifico">Encontre uma nova companhia </p>

        </div>
        <img class="mySlides w3-animate-fading" src="~/images/slide3.jpg" style="width:100%">

        <div class="w3-display-middle w3-large w3-container w3-padding-16 slidedesc">
            <p class="pacifico">Encontre uma nova companhia </p>

        </div>
        <img class="mySlides w3-animate-fading" src="~/images/slide4.jpg" style="width:100%">

    </div>

        <script>
            var myIndex = 0;
            carousel();

            function carousel() {
                var i;
                var x = document.getElementsByClassName("mySlides");
                for (i = 0; i < x.length; i++) {
                    x[i].style.display = "none";
                }
                myIndex++;
                if (myIndex > x.length) { myIndex = 1 }
                x[myIndex - 1].style.display = "block";
                setTimeout(carousel, 9000);
            }
        </script>

</body>
</html>
