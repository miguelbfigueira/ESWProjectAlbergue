@model IEnumerable<ESWProjectAlbergue.Models.Animal>

@{
    ViewData["Title"] = "FiltrarNumero";
}

<h2>Animais</h2>
@if (User.IsInRole("admins") || User.IsInRole("funcionarios"))
{
    <p>
        <a asp-action="Create">Registar Novo Animail</a>
    </p>
}
<form asp-controller="Animals" asp-action="FiltrarNumero" method="post">
    <p>
        ID: <input type="number" name="id">
        <input type="submit" value="Filtrar" />
    </p>
</form>
<form asp-controller="Animals" asp-action="FiltrarNome" method="post">
    <p>
        Nome: <input type="text" name="name">
        <input type="submit" value="Filtrar" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SizeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FurType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BehaviorType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Breed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SizeType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FurType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgeType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BehaviorType)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
