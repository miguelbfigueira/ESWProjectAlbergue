@model ESWProjectAlbergue.Models.Animal

@{
    ViewData["Title"] = "Delete";
}

<style>
    .container-all {
        background-color: #333333;
        padding: 20px;
        padding-top: 6px;
        border-style: solid;
        border-width: 5px;
        align-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        margin-top: 5px;
        margin-right: auto;
        margin-left: auto;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        display: inline-block;
        background-color: #333333;
        border-radius: 25px;
        position: center;
    }

    .whitetext {
        color: white;
        font-family: 'Quicksand', sans-serif;
        font-size: 16px;
    }

    .editar {
        font-family: "Pacifico";
        font-size: 40px;
        width: 100%;
        text-align: center;
        margin-top: 3%;
        color: #FFFFFF;
    }

    .form-create {
    }

    .creates {
        margin: 0 auto;
        width: fit-content;
    }

    .btndelete {
        background-color: #02A69E;
        text-transform: uppercase;
        border: none;
        color: white;
        padding: 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 10px;
    }

        .btndelete:hover {
            background-color: gray;
            color: white;
        }

    .btnatualizar {
        margin: 0 auto;
        align-content: center;
        display: table;
    }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
</style>


<div class="container-all">



    @{
        var imgsrc = "";

        if (Model.Photo != null)
        {
            var base64 = Convert.ToBase64String(Model.Photo);
            imgsrc = string.Format("data:image/gif;base64,{0}", base64);
        }

    }

    <div class="form-create">

        <div class="creates">
            <div class="btnatualizar">
                <h2 class="editar">Eliminar Animal</h2>
                <br />
                <div fotobtns>
                    <img src='@imgsrc' style="border-radius:10px; border:solid; border-color:white;" class="center"   />



                    <br />

                    <p class="whitetext" style="text-align:center;">Tem a certeza que quer eliminar o registo do animal "@Html.DisplayFor(model => model.Name)" ?</p>





                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Apagar" class="btndelete" /> |
                        <a asp-action="Index" class="btndelete">Voltar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>