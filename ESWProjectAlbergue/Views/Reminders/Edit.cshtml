@model ESWProjectAlbergue.Models.Reminder

@{
    ViewData["Title"] = "Edit";
}
<style>
    .container-all {
        background-color: #333333;
        padding: 20px;
        padding-top: 6px;
        border-style: solid;
        border-width: 5px;
        align-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        margin-top: 5px;
        margin-right: auto;
        margin-left: auto;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        display: inline-block;
        background-color: #333333;
        border-radius: 25px;
        position: center;
    }

    .whitetext {
        color: white;
        font-family: 'Quicksand', sans-serif;
        font-size: 16px;
    }

    .editar {
        font-family: "Pacifico";
        font-size: 40px;
        width: 100%;
        text-align: center;
        margin-top: 3%;
        color: #FFFFFF;
    }

    .form-create {
    }

    .creates {
        margin: 0 auto;
        width: fit-content;
    }

    .btnsalvar {
        background-color: #02A69E;
        text-transform: uppercase;
        border: none;
        color: white;
        padding: 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 10px;
    }

        .btnsalvar:hover {
            background-color: gray;
            color: white;
        }

    .btnatualizar {
        margin: 0 auto;
        align-content: center;
        display: table;
    }
</style>

<div class="container-all">

    <<div class="form-create">

        <div class="creates">
            <h2 class="editar">Editar Lembrete</h2>
            <br />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ReminderId" />
                <div class="form-group">
                    <label asp-for="UserCreaterId" class="control-label whitetext"></label>
                    <select asp-for="UserCreaterId" class="form-control" asp-items="ViewBag.UserCreaterId"></select>
                    <span asp-validation-for="UserCreaterId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateCreate" class="control-label whitetext"></label>
                    <input asp-for="DateCreate" class="form-control" />
                    <span asp-validation-for="DateCreate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateEnd" class="control-label whitetext"></label>
                    <input asp-for="DateEnd" class="form-control" />
                    <span asp-validation-for="DateEnd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label whitetext"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label whitetext" ></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsEvent" /> <span class="whitetext"> @Html.DisplayNameFor(model => model.IsEvent)</span>
</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsDone"  /> <span class="whitetext"> @Html.DisplayNameFor(model => model.IsDone) </span>
</label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="UserReminderId" class="control-label whitetext"></label>
                    <select asp-for="UserReminderId" class="form-control" asp-items="ViewBag.UserReminderId"></select>
                    <span asp-validation-for="UserReminderId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Atualizar" class="btnsalvar" />
                    <a asp-action="Index" class="btnsalvar" >Voltar</a>
                </div>
            </form>
        </div>
    </div>



</div>
