@model IEnumerable<ESWProjectAlbergue.Models.Reminder>

@{
    ViewData["Title"] = "Lembretes";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Criar Novo Lembrete</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserCreaterId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserReminderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.UserCreaterId.Name)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.UserReminderId.Name)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (item.IsEvent){
                    <img src="~/images/check.png" width="16px" height="16px" />
                }
                else
                {
                    <img src="~/images/cross.png" width="16px" height="16px" />
                }
            </td>
            <td>
                @if (item.IsDone)
                {
                    <img src="~/images/check.png" width="16px" height="16px" />
                }
                else
                {
                    <img src="~/images/cross.png" width="16px" height="16px" />
                }
              
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReminderId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ReminderId">Visualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.ReminderId">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
