@model ESWProjectAlbergue.Models.PosConditionsForm

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>PosConditionsForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AdoptionFileId" class="control-label"></label>
                <select asp-for="AdoptionFileId" class="form-control" asp-items="ViewBag.AdoptionFileId"></select>
                <span asp-validation-for="AdoptionFileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Answer1" /> @Html.DisplayNameFor(model => model.Answer1)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Answer2" /> @Html.DisplayNameFor(model => model.Answer2)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Answer3" /> @Html.DisplayNameFor(model => model.Answer3)
                    </label>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
